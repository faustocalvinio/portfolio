---

const { lang = "es" } = Astro.props;
---
      <!-- Información adicional -->
      <div
         class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl my-10 p-6 border border-blue-200 dark:border-blue-800"
      >
         <div class="text-center">
            <h4
               class="text-xl font-semibold text-gray-900 dark:text-white mb-2"
            >
               {
                  lang === "es"
                     ? "🌍 Ubicación y Disponibilidad"
                     : "🌍 Location & Availability"
               }
            </h4>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
               {
                  lang === "es"
                     ? "📍 Madrid, España • 🏠 Remoto • 🏢 Híbrido • ⏰ Disponible inmediatamente"
                     : "📍 Madrid, Spain • 🏠 Remote • 🏢 Hybrid • ⏰ Available immediately"
               }
            </p>
            <div class="flex flex-wrap justify-center gap-2">
               <span
                  class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded-full text-sm font-medium"
               >
                  {lang === "es" ? "Disponible" : "Available"}
               </span>
               <span
                  class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium"
               >
                  Full Stack
               </span>
               <span
                  class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded-full text-sm font-medium"
               >
                  React/Next.js
               </span>
               <span
                  class="px-3 py-1 bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 rounded-full text-sm font-medium"
               >
                  Node.js
               </span>
            </div>
         </div>
      </div>
   </div>