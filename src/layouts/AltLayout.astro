      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/svg+xml" href="/faviconsvg.svg" />
      <meta name="generator" content={Astro.generator} />
      <title>{title}</title>
   </head>
   <body class="dark:text-white text-2xl">
