---
import "@fontsource-variable/onest";
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/faviconsvg.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:text-white">
    <div class="h-full w-full dark:bg-slate-950">
      <div
        class="z-10 bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"
      >
        <slot />
      </div>
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  ::selection {
    color: #fff;
    background-color: #494949;
  }
  .dark ::selection {
    background-color: #fff;
    color: #000;
  }
  .dark ::-webkit-scrollbar {
    width: 12px;
  }
  .dark ::-webkit-scrollbar-track {
    background: #111827;
  }
  .dark ::-webkit-scrollbar-thumb {
    background: #414141;
  }
  ::-webkit-scrollbar {
    width: 12px; 
  }
  ::-webkit-scrollbar-track {
    background: #ffffff;
  }
  ::-webkit-scrollbar-thumb {
    background: #b3b3b3;
  }
</style>
