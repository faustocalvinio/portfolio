<html lang="es">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/png" href="/personal-favicon.png" />
      <slot name="meta" />
      <title>Portfolio - Windows 98</title>
   </head>
   <body class="win98">
      <div class="win98-desktop">
         <slot />
      </div>

      <!-- Taskbar -->
      <div class="win98-taskbar">
         <button class="win98-start">Inicio</button>
         <div class="win98-task">Portfolio - Windows 98</div>
         <div class="win98-tray"></div>
      </div>
