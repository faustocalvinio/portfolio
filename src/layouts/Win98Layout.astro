<style is:global>
   /* Windows 98 Theme */
   @font-face {
      font-family: "MS Sans Emu";
      src: local("Tahoma"), local("Verdana");
   }
   .win98 {
      font-family: "MS Sans Emu", Tahoma, Verdana, system-ui, sans-serif;
      color: #000;
      background: #008080; /* classic teal desktop */
      min-height: 100vh;
   }
   .win98-desktop {
      min-height: calc(100vh - 32px);
      padding: 16px;
   }
   .win98-taskbar {
      position: fixed;
      left: 0;
      right: 0;
      bottom: 0;
      height: 32px;
      background: #c0c0c0;
      border-top: 2px solid #fff;
      box-shadow:
         inset 0 2px 0 #dfdfdf,
         inset 0 -2px 0 #808080;
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 4px 6px;
   }
   .win98-start {
      background: #c0c0c0;
      border: 2px solid;
      border-color: #fff #808080 #808080 #fff; /* 3D up */
      padding: 2px 10px;
      font-weight: 600;
      cursor: pointer;
   }
   .win98-start:active {
      border-color: #808080 #fff #fff #808080; /* pressed */
   }
   .win98-task {
      flex: 1;
      height: 100%;
      display: flex;
      align-items: center;
      padding: 0 8px;
      background: #c0c0c0;
      border: 2px solid;
      border-color: #fff #808080 #808080 #fff;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
   }
   .win98-tray {
      width: 80px;
   }

   /* Window look */
   .win98-window {
      background: #c0c0c0;
      border: 2px solid #000;
      box-shadow:
         inset -1px -1px 0 #fff,
         inset 1px 1px 0 #808080,
         inset -2px -2px 0 #dfdfdf,
         inset 2px 2px 0 #404040;
      margin: 12px 0;
   }
   .win98-titlebar {
      background: linear-gradient(90deg, #000080, #1084d0);
      color: #fff;
      padding: 4px 8px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      user-select: none;
   }
   .win98-titlebar .title {
      font-weight: 700;
      letter-spacing: 0.2px;
   }
   .win98-controls {
      display: flex;
      gap: 2px;
   }
   .win98-btn {
      width: 16px;
      height: 16px;
      background: #c0c0c0;
      border: 2px solid;
      border-color: #fff #808080 #808080 #fff;
   }
   .win98-content {
      padding: 10px;
      background: #c0c0c0;
   }

   .win98-content img {
      max-width: 100%;
      height: auto;
   }
</style>
