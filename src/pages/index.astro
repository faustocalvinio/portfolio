---
import PageMetaEs from "../components/PageMetaEs.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../sections/Hero.astro";
import Experiencia from "../sections/Experiencia.astro";
import AboutMe from "../sections/SobreMi.astro";
import Proyectos from "../sections/Proyectos.astro";
import Skills from "../sections/Skills.astro";
import Layout from "../layouts/Layout.astro";
